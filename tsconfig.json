{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "scripts/**/*",
    "*.js",
    "*.config.js"
  ],
  "exclude": [
    "node_modules",
    "test-results",
    "playwright-report",
    "dist",
    "playwright.config.js"
  ]
}

